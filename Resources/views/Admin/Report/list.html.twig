{% extends 'EarlsLionBiBundle:Admin:layout.html.twig' %}

{% block rightContent %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Report List</h1>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-6"><a href="{{ path('lionbi_report_editor') }}" class="btn btn-success"><i class="fa fa-plus-square"></i> Create</a></div>
        </div>
        
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-group">
                    {% for item in reportList %}
                        <li class="list-group-item"><i class="fa fa-th-large"></i> {{item.getDisplayName()}}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}